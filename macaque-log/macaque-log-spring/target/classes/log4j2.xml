<?xml version="1.0" encoding="UTF-8"?>
<!--
    status="warn" 日志框架本身的输出日志级别
    monitorInterval="5" 自动加载配置文件的间隔时间，不低于 5 秒
-->
<Configuration status="error" monitorInterval="5">


    <!--日志处理-->
    <Appenders>
        <!--控制台输出 appender-->
        <Console name="Console">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] [%-5level] %c{36}:%L --- %m%n" />
        </Console>

        <File name="compare"
                     fileName="D:/log/compare.log"
                     append="true">
            <PatternLayout
                    pattern="%d{HH:mm:ss.SSS} [%t] [%-5level] %c{36}:%L --- %m%n"/>
        </File>

    </Appenders>

    <!--logger 定义-->
    <Loggers>
        <Logger name="com.macaque.controller" level="info">
            <!--指定日志使用的处理器-->
            <!--            <AppenderRef ref="Console" />-->
            <AppenderRef ref="compare" />
        </Logger>
        <!--使用 rootLogger 配置 日志级别 level="trace"-->
        <Root level="info">
            <!--指定日志使用的处理器-->
            <AppenderRef ref="Console" />
            <AppenderRef ref="compare" />
        </Root>

    </Loggers>
</Configuration>